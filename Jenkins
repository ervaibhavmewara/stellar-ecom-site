pipeline { 
    agent any

    environment {
        REPO_URL = 'https://github.com/ervaibhavmewara/stellar-ecom-site.git'
        BRANCH = 'main'
    }

    stages {
       

        stage("Build") {
            steps {
                sh "yarn install"
                sh "yarn build"
            }
        }    

        stage("Deploy") {
            steps {
                pm2 restart app || pm2 start yarn --interpreter none --name app -- start -p 4040

            } 
        }    
    }
}
